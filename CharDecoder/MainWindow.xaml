<Window x:Class="CharDecoder.MainWindow"
        x:Name="window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharDecoder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="grid">
        <Border BorderThickness="1"
                Width="200" Height="200"
                BorderBrush="#FF000000">
            <Image x:Name="image" Margin="3,3,3,3" />
        </Border>
        <Button Content="Ask" HorizontalAlignment="Center" Margin="0,339,0,0" VerticalAlignment="Top" Click="ButtonAsk_Click"/>
        <Button Content="Reset" HorizontalAlignment="Left" Margin="467,339,0,0" VerticalAlignment="Top" Click="ButtonReset_Click"/>
        <Button Content="Train" HorizontalAlignment="Left" Margin="300,339,0,0" VerticalAlignment="Top" Click="ButtonTrain_Click"/>
    </Grid>
</Window>
